{
  // General editor and workspace settings.
  "editor.wordWrap": "off",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.lineNumbers": "relative",
  "editor.cursorStyle": "line",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.suggestSelection": "first",
  "workbench.editor.enablePreview": false,
  "explorer.confirmDragAndDrop": false,
  "diffEditor.renderSideBySide": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.zoomLevel": 2,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorBlinking": "solid",
  "editor.occurrencesHighlight": false,

  // Code formatting and linting settings.
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "html.format.indentHandlebars": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "vue"],

  // Language-specific settings
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[bat]": {
    "files.eol": "\r\n"
  },

  // VSCodeVim extension settings (no longer used).
  "vim.useSystemClipboard": true,

  // VSCode Neovim extension settings.
  "vscode-neovim.useWSL": true,
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.config/nvim/vimscript/lv-vscode/init.vim",
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\tools\\neovim\\Neovim\\bin\\nvim.exe",

  // Gitlens extension settings.
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.enabled": false,

  // BEM Helper settings.
  "bemHelper.showDepthWarnings": false,
  "bemHelper.responsiveLinting": false,

  // Linux-specific settings.
  "terminal.integrated.shellArgs.linux": ["-l"],

  // Windows-specific settings.
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "editor.renderControlCharacters": false,

  // Appearance settings.
  "workbench.colorTheme": "One Monokai",
  "workbench.colorCustomizations": {
    "[One Monokai]": {
      "editor.lineHighlightBackground": "#313641",
      "editor.selectionBackground": "#464d5c"
    }
  }
}
